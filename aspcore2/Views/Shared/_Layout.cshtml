    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <!-- Place favicon.ico in the root directory -->      
    <style>
        body {
            display: -webkit-box;
            display: -moz-box;
            display: -ms-flexbox;
            display: -webkit-flex;
            display: flex;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
            font-family: Muli, sans-serif;
            color: #444;
        }

        ul {
            list-style: none;
            margin-top: 0;
            padding: 0;
        }

        a {
            cursor: pointer;
            display: block;
            color: #b3b3b3;
            text-decoration: none;
        }

        header {
            width: 200px;
            height: 100%;
            float: left;
            position: relative;
            z-index: 99;
        }

        header nav ul li {
            border-bottom: 1px solid #42454D;
            padding-left: 48px;
            transition: all 0.6s;
            border-top: 1px solid #2E3036;
        }

        header nav ul li:hover {
            background-color: #454952;
            transition: all 0.6s;
            border-bottom: 1px solid #797979;
        }

        header nav ul li:hover a {
            color: #fff;
            transition: all 0.6s;
        }

        header nav ul li a {
            line-height: 55px;
            font-size: 18px;
            position: relative;
            letter-spacing: 1px;
            transition: all 0.6s;
        }

        .bckg {
            background-color: #383B42;
            box-shadow: -4px 0px 10px rgba(14, 14, 14, 0.48) inset;
            width: 200px;
            height: 100%;
            position: fixed;
            left: 0;
            top: 0;
        }

        h1 {
            text-align: center;
            font-weight: normal;
            color: #F6F6EF;
            margin: 0;
            background-color: #34363A;
            border-bottom: 1px solid rgba(101, 116, 134, 0.57);
            font-size: 21pt;
            width: 200px;
            color: #95b001;
            text-transform: uppercase;
        }

        form {
            padding: 10px;
            margin: 10px;
        }

        form .form-input {
            padding: 5px;
        }

        form .form-input span {
            display: block;
            font-weight: bold;
        }

        form .form-input button,
        form .form-input input,
        form .form-input select,
        form .form-input textarea {
            display: block;
            width: 100%;
            font-weight: bold;
            margin-bottom: 10px;
        }

        form .form-input input[type="text"],
        form .form-input input[type="number"] {
            display: block;
            width: 100%;
            height: 34px;
            font-weight: 100;
            padding-left: 6px;
            color: #555;
            background-color: #fff;
            border: 1px solid #ccc;
        }

        form .form-input select {
            display: block;
            width: 100%;
            height: 34px;
            font-weight: 100;
            color: #555;
            background-color: #fff;
            border: 1px solid #ccc;
        }

        form .form-input select option {
            font-weight: bold;
            color: #66F;
        }

        form .form-input textarea {
            font-weight: 100;
            color: #555;
            min-height: 150px;
            padding-left: 6px;
        }

        form .form-input input[type="checkbox"] {
            width: 20px;
            text-align: left;
        }

        .form-input {
            float: left;
            width: 100%;
            position: relative;
            padding: 5px;
        }

        .col-2 {
            width: 50%;
            float: left;
        }

        .button {
            display: inline-block;
            padding: 6px 12px;
            margin-bottom: 0;
            font-size: 14px;
            font-weight: 400;
            text-align: center;
            cursor: pointer;
            border: 1px solid transparent;
        }

        .button-success {
            color: #fff;
            background-color: #5cb85c;
            border-color: #4cae4c;
        }
    </style>
</head>

<body>
